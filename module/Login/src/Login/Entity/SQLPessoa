-- Table: pessoa

-- DROP TABLE pessoa;

CREATE TABLE pessoa
(
  id serial NOT NULL, -- Identificação da pessoa
  nome character varying(150) NOT NULL, -- Nome Completo da pessoa
  email character varying(80), -- Email de acesso
  senha character varying(40), -- Senha de acesso em MD5
  data_criacao date, -- Data de criação da pessoa
  data_inativacao date, -- Data de inativação da pessoa
  status status, -- Status do acesso da pessoa: ativo ou inativo
  CONSTRAINT primary_key_pessoa PRIMARY KEY (id) -- Primary Key da tabela pessoa
)
WITH (
  OIDS=FALSE
);
ALTER TABLE pessoa
  OWNER TO postgres;
COMMENT ON TABLE pessoa
  IS 'Tabela pessoa com dados pessoais e acesso';
COMMENT ON COLUMN pessoa.id IS 'Identificação da pessoa';
COMMENT ON COLUMN pessoa.nome IS 'Nome Completo da pessoa';
COMMENT ON COLUMN pessoa.email IS 'Email de acesso ';
COMMENT ON COLUMN pessoa.senha IS 'Senha de acesso em MD5';
COMMENT ON COLUMN pessoa.data_criacao IS 'Data de criação da pessoa';
COMMENT ON COLUMN pessoa.data_inativacao IS 'Data de inativação da pessoa';
COMMENT ON COLUMN pessoa.status IS 'Status do acesso da pessoa: ativo ou inativo';

COMMENT ON CONSTRAINT primary_key_pessoa ON pessoa IS 'Primary Key da tabela pessoa';


-- Index: index_pessoa_status

-- DROP INDEX index_pessoa_status;

CREATE INDEX index_pessoa_status
  ON pessoa
  USING btree
  (status);
COMMENT ON INDEX index_pessoa_status
  IS 'Index para o status da pessoa';