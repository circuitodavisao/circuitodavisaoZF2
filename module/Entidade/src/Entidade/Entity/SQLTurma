-- Table: turma

-- DROP TABLE turma;

CREATE TABLE turma
(
  id serial NOT NULL, -- Identificação da turma
  data date NOT NULL, -- Data de inicio do revisão de vidas
  data_criacao date NOT NULL DEFAULT ('now'::text)::date, -- Data de criação da turma
  hora_criacao time without time zone NOT NULL DEFAULT ('now'::text)::time with time zone, -- Hora de criação da turma
  data_inativacao date, -- Data de inativação da turma
  hora_inativacao time without time zone, -- Hora de inativação da turma
  CONSTRAINT pk_turma PRIMARY KEY (id) -- Chave primaria da turma
)
WITH (
  OIDS=FALSE
);
ALTER TABLE turma
  OWNER TO postgres;
COMMENT ON TABLE turma
  IS 'Tabela com os revisão de vidas ou turma do instituto de vencedores';
COMMENT ON COLUMN turma.id IS 'Identificação da turma';
COMMENT ON COLUMN turma.data IS 'Data de inicio do revisão de vidas';
COMMENT ON COLUMN turma.data_criacao IS 'Data de criação da turma';
COMMENT ON COLUMN turma.hora_criacao IS 'Hora de criação da turma';
COMMENT ON COLUMN turma.data_inativacao IS 'Data de inativação da turma';
COMMENT ON COLUMN turma.hora_inativacao IS 'Hora de inativação da turma';

COMMENT ON CONSTRAINT pk_turma ON turma IS 'Chave primaria da turma';

