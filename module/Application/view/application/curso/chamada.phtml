												$aulaAtiva = $turma->getTurmaAulaAtiva()->getAula();
												foreach ($disciplina->getAulaOrdenadasPorPosicao() as $aula) {
													if($turma->getTurmaAulaAtiva()->getAula()->getId() === $aula->getId()){
														break;
													}

													$html .= '<td class="text-center">';
