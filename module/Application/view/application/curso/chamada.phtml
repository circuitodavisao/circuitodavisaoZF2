									case Situacao::DESISTENTE:
										$corSituacao = 'warning';
										break;
									case Situacao::REPROVADO_POR_FALTA:
										$corSituacao = 'danger';
										break;
									case Situacao::REPROVADO_POR_FINANCEIRO:
										$corSituacao = 'danger';
										break;
									default:
										$corSituacao = 'success';
									}

									$situacao = $this->repositorio->getSituacaoORM()->encontrarPorId($relatorio->getSituacao_id());
