													}
												}
											}
										}
									}
									$inadimplente = 1;
									$adimplente = 2;
									if($this->postado['mostrarFinanceiro'] == $inadimplente){
										if($contador < $totalDeDisciplinas){
											$mostrarFinanceiro = true;
										}
									}
									if($this->postado['mostrarFinanceiro'] == $adimplente){
										if($contador === $totalDeDisciplinas){
											$mostrarFinanceiro = true;
										}
									}
