										foreach ($turma->getCurso()->getDisciplina() as $disciplina) {
											$mostrar = false;
											if ($turma->getTurmaAulaAtiva() && $turma->getTurmaAulaAtiva()->getAula()->getDisciplina()->getId() === $disciplina->getId()) {
												$mostrar = true;
											}
