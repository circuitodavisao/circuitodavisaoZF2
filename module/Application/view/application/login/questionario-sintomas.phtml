</h1>
</div>
</div>
</div>

<div id='html' style='padding: 5px;'></div>

<script type="text/javascript">
const respostas = [
	"0 - Nunca ou quase nunca tem o sintoma.",
	"1 - Tem ocasionalmente, o efeito não é severo.",
	"2 - Tem ocasionalmente, o efeito é severo.",
	"3 - Tem frequentemente, o efeito não é severo.",
	"4 - Tem frequentemente, o efeito é severo.",
]
const secoes = [
{
	titulo: 'Cabeça',
	perguntas: [
		'Dores',
		'Desmaio',
		'Tontura',
		'Insônia',
	],
},
{
	titulo: 'Olhos',
	perguntas: [
		'Lacrimosos ou com coceira',
		'Inchados, vermelhos, ou pálpebras grudentas',
		'Bolsas ou olheiras',
		'Visão borrada ou em túnel {não inclui miopia ou hipermetropia}',
	]
},
{
	titulo: 'Ouvidos',
	perguntas: [
		'Coceira',
		'Dores e infecções',
		'Supuração',
		'Zumbido, perda de audição',
	]
},
{
	titulo: 'Pulmões',
	perguntas: [
		'Congestão no peito',
		'Asa, bronquite',
		'Respiração curta',
		'Dificuldade em respirar',
	]
},
{
	titulo: 'Nariz',
	perguntas: [
		'Nariz entupido',
		'Sinusite',
		'Febre do feno',
		'Ataques de espirro',
		'Formação excessiva de muco',
	]
},
{
	titulo: 'Trato Digestivo',
	perguntas: [
		'Náusea e vômitos',
		'Diarreia',
		'Prisão de ventre',
		'Distensão abdominal',
		'Arrotos, passagem de gás',
		'Azia',
		'Dor intestinal/ Estomacal',
	]
},
{
	titulo: 'Boca/Garganta',
	perguntas: [
		'Tosse crônica',
		'Engasgo, necessidade frequente de limpar a garganta',
		'Garganta inflamada, rouquidão, perda de voz',
		'Língua, gengivas e lábios inchados ou esbranquiçados',
		'Aftas',
	]
},
{
	titulo: 'Juntas/ Músculos',
	perguntas: [
		'Dor ou sensibilidade nas juntas',
		'Artrite',
		'Rigidez ou limitação de movimentos',
		'Dor ou sensibilidade nos músculos',
		'Sensação de fraqueza ou cansaço',
	]
},
{
	titulo: 'Pele',
	perguntas: [
		'Acne',
		'Urticária, pele seca',
		'Perda de cabelo',
		'Rubores, ondas de calor',
		'Suor excessivo',
	]
},
{
	titulo: 'Peso',
	perguntas: [
		'Comer e beber em excesso',
		'Desejo por certos alimentos',
		'Excesso de peso',
		'Compulsão por comer',
		'Retenção de líquido',
		'Peso baixo',
	]
},
{
	titulo: 'Coração',
	perguntas: [
		'Batimento irregular ou falho',
		'Batimento rápido ou forte',
		'Dor no peito',
	]
},
{
	titulo: 'Energia',
	perguntas: [
		'Fadiga/ lentidão',
		'Apatia/ letargia',
		'Hiperatividade',
		'Inquietação',
	]
},
{
	titulo: 'Emoções',
	perguntas: [
