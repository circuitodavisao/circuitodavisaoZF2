for(const secao of secoes){
	let contaPergunta = 1
	for(const pergunta of secao.perguntas){
		const value = parseInt(document.getElementById(`${contaSecao}-${contaPergunta}`).value)
		if(value === 9){
			temErro = true
		}else{
			soma += value
		}
		contaPergunta++
	}
	contaSecao++
}

if(temErro){
	alert('faltou selecionar algum')
}else{
	let resposta = ''
	let cor = ''
