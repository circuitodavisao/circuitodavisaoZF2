	html += `<h1 style="color: ${cor}">${resposta}</h1>`
	html += `<h3>Total de Pontos: ${soma}</h3>`
	html += `</div>`

	document.getElementById('html').innerHTML = html
	document.getElementById('button').classList.add('hidden')
}

